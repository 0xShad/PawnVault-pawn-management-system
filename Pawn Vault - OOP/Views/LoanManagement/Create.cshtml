@model Pawn_Vault___OOP.Models.Loan
@using Pawn_Vault___OOP.Models

@{
    ViewData["Title"] = "Create Loan";
    var customerType = Context.Request.Query["customerType"].ToString();
}

<div class="flex items-center mb-6">
    <div class="w-1.5 h-6 bg-yellow-500 mr-3"></div>
    <h1 class="text-3xl font-bold text-gray-900">Create New Loan</h1>
</div>
<p class="text-gray-600 mb-8 ml-4">Fill out the form below to create a new pawn loan.</p>

<form asp-controller="LoanManagement" asp-action="Create" method="post" class="space-y-6">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-red-500 mb-4" })
    <input type="hidden" asp-for="UserId" value="@ViewBag.UserId" />
    
    <!-- Customer Selection -->
    <div class="space-y-4">
        <h3 class="text-lg font-semibold text-gray-900 border-b border-gray-200 pb-2">Customer Information</h3>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label asp-for="CustomerID" class="block text-sm font-medium text-gray-700 mb-2">
                    Customer <span class="text-red-500">*</span>
                </label>
                <select asp-for="CustomerID" asp-items="@ViewBag.Customers" 
                        class="w-full border border-gray-300 rounded-lg py-3 px-4 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500 transition-colors"
                        required>
                    <option value="">-- Select Customer --</option>
                </select>
                <span asp-validation-for="CustomerID" class="text-red-500 text-sm"></span>
            </div>
            
            <div class="flex items-end">
                <a href="/Customer/Create?redirectToLoan=true" 
                   class="inline-flex items-center gap-2 bg-blue-600 hover:bg-blue-700 text-white px-4 py-3 rounded-lg font-medium transition-colors">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                    Add New Customer
                </a>
            </div>
        </div>
    </div>

    <!-- Item Information -->
    <div class="space-y-4">
        <h3 class="text-lg font-semibold text-gray-900 border-b border-gray-200 pb-2">Item Information</h3>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label asp-for="ItemName" class="block text-sm font-medium text-gray-700 mb-2">
                    Item Name <span class="text-red-500">*</span>
                </label>
                <input asp-for="ItemName" type="text" maxlength="100"
                       class="w-full border border-gray-300 rounded-lg py-3 px-4 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500 transition-colors"
                       placeholder="Enter item name"
                       required />
                <span asp-validation-for="ItemName" class="text-red-500 text-sm"></span>
            </div>
            
            <div>
                <label asp-for="Description" class="block text-sm font-medium text-gray-700 mb-2">
                    Description
                </label>
                <input asp-for="Description" type="text"
                       class="w-full border border-gray-300 rounded-lg py-3 px-4 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500 transition-colors"
                       placeholder="Enter item description" />
                <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
            </div>
        </div>
    </div>

    <!-- Loan Details -->
    <div class="space-y-4">
        <h3 class="text-lg font-semibold text-gray-900 border-b border-gray-200 pb-2">Loan Details</h3>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div>
                <label asp-for="Amount" class="block text-sm font-medium text-gray-700 mb-2">
                    Loan Amount <span class="text-red-500">*</span>
                </label>
                <div class="relative">
                    <span class="absolute left-3 top-3 text-gray-500">₱</span>
                    <input asp-for="Amount" type="number" min="0" step="0.01"
                           class="w-full border border-gray-300 rounded-lg py-3 pl-8 pr-4 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500 transition-colors"
                           placeholder="0.00"
                           required />
                </div>
                <span asp-validation-for="Amount" class="text-red-500 text-sm"></span>
            </div>
            
            <div>
                <label asp-for="EstimatedValue" class="block text-sm font-medium text-gray-700 mb-2">
                    Estimated Value <span class="text-red-500">*</span>
                </label>
                <div class="relative">
                    <span class="absolute left-3 top-3 text-gray-500">₱</span>
                    <input asp-for="EstimatedValue" type="number" min="0" step="0.01"
                           class="w-full border border-gray-300 rounded-lg py-3 pl-8 pr-4 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500 transition-colors"
                           placeholder="0.00"
                           required />
                </div>
                <span asp-validation-for="EstimatedValue" class="text-red-500 text-sm"></span>
            </div>
            
            <div>
                <label asp-for="InterestRate" class="block text-sm font-medium text-gray-700 mb-2">
                    Interest Rate (%) <span class="text-red-500">*</span>
                </label>
                <input asp-for="InterestRate" type="number" min="0" step="0.01"
                       class="w-full border border-gray-300 rounded-lg py-3 px-4 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500 transition-colors"
                       placeholder="0.00"
                       required />
                <span asp-validation-for="InterestRate" class="text-red-500 text-sm"></span>
            </div>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label asp-for="RetentionPeriod" class="block text-sm font-medium text-gray-700 mb-2">
                    Retention Period (Days) <span class="text-red-500">*</span>
                </label>
                <input asp-for="RetentionPeriod" type="number" min="1"
                       class="w-full border border-gray-300 rounded-lg py-3 px-4 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500 transition-colors"
                       placeholder="30"
                       required />
                <span asp-validation-for="RetentionPeriod" class="text-red-500 text-sm"></span>
            </div>
            <div>
                <label asp-for="DueDate" class="block text-sm font-medium text-gray-700 mb-2">
                    Due Date <span class="text-red-500">*</span>
                </label>
                <input asp-for="DueDate" type="date"
                       class="w-full border border-gray-300 rounded-lg py-3 px-4 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500 transition-colors"
                       required />
                <span asp-validation-for="DueDate" class="text-red-500 text-sm"></span>
            </div>
        </div>
    </div>

    <!-- Transaction Information -->
    <div class="space-y-4">
        <h3 class="text-lg font-semibold text-gray-900 border-b border-gray-200 pb-2">Transaction Information</h3>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label asp-for="TransactionCode" class="block text-sm font-medium text-gray-700 mb-2">
                    Transaction Code <span class="text-red-500">*</span>
                </label>
                <input type="hidden" asp-for="TransactionCode" value="@ViewBag.TransactionCode" />
                <input asp-for="TransactionCode" type="text" maxlength="50"
                       class="w-full border border-gray-300 rounded-lg py-3 px-4 bg-gray-100 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500 transition-colors"
                       value="@ViewBag.TransactionCode" readonly />
                <span asp-validation-for="TransactionCode" class="text-red-500 text-sm"></span>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    Issue Date
                </label>
                <input type="text" value="@DateTime.Now.ToString("MMMM dd, yyyy")" 
                       class="w-full border border-gray-300 rounded-lg py-3 px-4 bg-gray-50 text-gray-600"
                       readonly />
                <small class="text-gray-500 text-sm">Automatically set to today's date</small>
            </div>
        </div>
    </div>

    <!-- Form Actions -->
    <div class="flex justify-between items-center pt-6 border-t border-gray-200">
        <a href="/LoanManagement" class="inline-flex items-center gap-2 text-gray-600 hover:text-gray-900 font-medium transition-colors">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Back to Loans
        </a>
        
        <div class="flex gap-3">
            <button type="button" onclick="resetForm()" 
                    class="px-6 py-3 border border-gray-300 text-gray-700 rounded-lg font-medium hover:bg-gray-50 transition-colors">
                Reset
            </button>
            <button type="submit" 
                    class="px-8 py-3 bg-yellow-500 hover:bg-yellow-600 text-white font-semibold rounded-lg shadow-lg transition-all duration-200 transform hover:scale-105">
                Create Loan
            </button>
        </div>
    </div>
</form>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}