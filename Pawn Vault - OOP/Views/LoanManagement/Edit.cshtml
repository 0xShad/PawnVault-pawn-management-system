@* Loan Edit Page *@
<div class="h-screen">
    <div class="flex items-center justify-between mt-8 mb-6 px-6 py-4">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">Edit Loan</h1>
            <p class="text-gray-500">Update loan details and payment information</p>
        </div>
        <a href="/LoanManagement" class="flex items-center gap-2 bg-gray-100 hover:bg-gray-200 text-gray-700 px-5 py-2 rounded-lg text-sm font-semibold shadow transition">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to Loans
        </a>
    </div>

    <div class="bg-white rounded-2xl shadow p-8 max-w-3xl mx-auto">
        <form method="post" action="/LoanManagement/Edit">
            <input type="hidden" name="LoanId" value="L001" />
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Customer Information -->
                <div class="space-y-4">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Customer Information</h2>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Customer Name</label>
                        <input type="text" name="CustomerName" value="John Doe" 
                               class="w-full border border-gray-300 rounded-lg py-2 px-4 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-gray-900" />
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Contact Number</label>
                        <input type="tel" name="ContactNumber" value="(555) 123-4567" 
                               class="w-full border border-gray-300 rounded-lg py-2 px-4 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-gray-900" />
                    </div>
                </div>

                <!-- Loan Details -->
                <div class="space-y-4">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Loan Details</h2>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Item Description</label>
                        <input type="text" name="ItemDescription" value="Gold Ring - 14k" 
                               class="w-full border border-gray-300 rounded-lg py-2 px-4 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-gray-900" />
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Loan Amount</label>
                        <div class="relative">
                            <span class="absolute left-4 top-2 text-gray-500">$</span>
                            <input type="number" name="LoanAmount" value="500" step="0.01" 
                                   class="w-full border border-gray-300 rounded-lg py-2 pl-8 pr-4 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-gray-900" />
                        </div>
                    </div>
                </div>

                <!-- Payment Information -->
                <div class="space-y-4 md:col-span-2">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Payment Information</h2>
                    
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Interest Rate (%)</label>
                            <input type="number" name="InterestRate" value="5.5" step="0.1" 
                                   class="w-full border border-gray-300 rounded-lg py-2 px-4 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-gray-900" />
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Due Date</label>
                            <input type="date" name="DueDate" value="2024-06-15" 
                                   class="w-full border border-gray-300 rounded-lg py-2 px-4 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-gray-900" />
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Status</label>
                            <select name="Status" 
                                    class="w-full border border-gray-300 rounded-lg py-2 px-4 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-gray-900">
                                <option value="Active" selected>Active</option>
                                <option value="Overdue">Overdue</option>
                                <option value="Paid">Paid</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex justify-end gap-4 mt-8">
                <button type="button" onclick="window.location.href='/LoanManagement'" 
                        class="px-6 py-2 border border-gray-300 rounded-lg text-gray-700 font-semibold hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:ring-offset-2">
                    Cancel
                </button>
                <button type="submit" 
                        class="px-6 py-2 bg-gray-900 text-white rounded-lg font-semibold hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:ring-offset-2">
                    Save Changes
                </button>
            </div>
        </form>
    </div>
</div> 