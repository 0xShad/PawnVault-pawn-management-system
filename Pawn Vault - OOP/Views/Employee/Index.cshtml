@model List<Microsoft.AspNetCore.Identity.IdentityUser>

<div class="p-4 min-h-screen flex w-full">
    <div class="w-full mx-auto bg-white rounded-lg p-6 sm:p-8 md:p-10">
        <!-- Header -->
        <div class="flex flex-col sm:flex-row items-center justify-between mb-6">
            <div class="flex items-center mb-4 sm:mb-0">
                <div class="w-1 h-8 bg-yellow-500 mr-2 rounded"></div>
                <h1 class="text-3xl font-semibold text-blue-900">Employees</h1>
            </div>
            <div class="flex items-center space-x-4">
                <a asp-action="Create" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition">Add Employee</a>
            </div>
        </div>

        <!-- Table -->
        <div class="overflow-x-auto">
            <table class="min-w-full table-auto">
                <thead class="bg-white">
                    <tr class="text-sm sm:text-base bg-white text-left border-b">
                        <th class="py-3 px-4 font-semibold text-gray-700">Profile</th>
                        <th class="py-3 px-4 font-semibold text-gray-700">Email</th>
                        <th class="py-3 px-4 font-semibold text-gray-700">Username</th>
                        <th class="py-3 px-4 font-semibold text-gray-700">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var user in Model)
                        {
                            <tr class="bg-gray-50 hover:bg-gray-100 transition border-b">
                                <td class="py-3 px-4 text-gray-800 flex items-center gap-2">
                                    <div class="rounded-full border border-gray-400 p-1 flex-shrink-0">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                  d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                        </svg>
                                    </div>
                                    <span class="text-gray-700 font-medium">@user.UserName</span>
                                </td>
                                <td class="py-3 px-4 text-gray-800">@user.Email</td>
                                <td class="py-3 px-4 text-gray-800">@user.UserName</td>
                                <td class="py-3 px-4 text-gray-800">
                                    <a asp-action="Edit" asp-route-id="@user.Id" class="text-blue-600 hover:text-blue-800 mr-3">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@user.Id" class="text-red-600 hover:text-red-800">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="py-6 text-center text-gray-600">
                                <em>No employees found.</em>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
