@model Pawn_Vault___OOP.Models.ViewModels.StaffViewModel

<div class="max-w-xl mx-auto bg-white p-6 rounded shadow">
    <h2 class="text-2xl font-semibold mb-6 text-red-700">Delete Staff</h2>

    <p class="mb-6 text-gray-700">
        Are you sure you want to permanently delete <strong>@Model.Email</strong>?
    </p>

    <form asp-action="Delete" method="post" class="flex space-x-4">
        <input type="hidden" asp-for="Id" />

        <button type="submit"
                class="bg-red-600 hover:bg-red-700 text-white font-medium px-4 py-2 rounded shadow transition">
            Confirm Delete
        </button>

        <a asp-action="Index"
           class="inline-flex items-center text-gray-700 hover:text-gray-900 underline transition">
            Cancel
        </a>
    </form>
</div>
