@model Pawn_Vault___OOP.Models.Payment
@{
    ViewData["Title"] = "View Transaction";
}
<div class="px-6 py-4 min-h-screen">
    <div class="flex items-center justify-between mb-1">
        <h1 class="text-3xl font-bold text-gray-900">Transaction Details</h1>
        <div class="flex gap-3">
            <a asp-action="EditTransaction" asp-route-id="@Model.PaymentID" class="flex items-center gap-1.5 text-sm font-bold px-4 py-2 cursor-pointer rounded-lg bg-black text-white hover:bg-gray-800 transition">
                <i class="fas fa-edit text-xl leading-none"></i> Edit Transaction
            </a>
            <a asp-action="Index" class="flex items-center gap-1.5 text-sm font-bold px-4 py-2 cursor-pointer rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-50 transition">
                <i class="fas fa-arrow-left text-xl leading-none"></i> Back to List
            </a>
        </div>
    </div>

    <div class="bg-white rounded-xl shadow p-6 mt-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Basic Information -->
            <div class="space-y-4">
                <div>
                    <h3 class="text-lg font-semibold text-gray-700 mb-3">Basic Information</h3>
                    <div class="space-y-3">
                        <div>
                            <label class="block text-sm font-medium text-gray-500">Transaction ID</label>
                            <p class="text-gray-900">@Model.PaymentID</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-500">Transaction Type</label>
                            <span class="inline-block px-2 py-1 text-xs rounded-full bg-blue-100 text-blue-700">@Model.TransactionType</span>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-500">Date</label>
                            <p class="text-gray-900">@Model.PaymentDate.ToString("MMMM dd, yyyy")</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-500">Status</label>
                            <span class="inline-block px-2 py-1 text-xs rounded-full
                                @(Model.Loan != null && Model.Loan.Status == "Active" ? "bg-green-100 text-green-700" : Model.Loan != null && Model.Loan.Status == "Forfeited" ? "bg-red-100 text-red-700" : Model.Loan != null && Model.Loan.Status == "Paid" ? "bg-blue-100 text-blue-700" : "bg-gray-100 text-gray-700")">
                                @(Model.Loan != null ? Model.Loan.Status : "N/A")
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Loan Information -->
            <div class="space-y-4">
                <div>
                    <h3 class="text-lg font-semibold text-gray-700 mb-3">Loan Information</h3>
                    <div class="space-y-3">
                        <div>
                            <label class="block text-sm font-medium text-gray-500">Loan ID</label>
                            <p class="text-gray-900">@Model.LoanID</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-500">Customer</label>
                            <p class="text-gray-900">@Model.Loan?.Customer?.FullName</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-500">Item</label>
                            <p class="text-gray-900">@Model.Loan?.ItemName</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-500">Amount</label>
                            <p class="text-gray-900">@Model.Amount.ToString("C")</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-500">Payment Method</label>
                            <p class="text-gray-900">@Model.PaymentMethod</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-500">Reference Number</label>
                            <p class="text-gray-900">@Model.ReferenceNumber</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-500">Handled By</label>
                            <p class="text-gray-900">@Model.HandledBy</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Notes -->
        <div class="mt-6">
            <h3 class="text-lg font-semibold text-gray-700 mb-3">Notes</h3>
            <div class="bg-gray-50 rounded-lg p-4">
                <p class="text-gray-700">@Model.Notes</p>
            </div>
        </div>
    </div>
</div>