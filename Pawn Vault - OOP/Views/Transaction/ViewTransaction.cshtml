@{
    ViewData["Title"] = "View Transaction";
}

<div class="p-5">
    <!-- Header -->
    <div class="flex justify-between items-center mb-5 relative">
        <h2 class="flex items-center text-2xl font-bold">
            <span class="w-1 h-7 bg-[#D4AF37] mr-2"></span>Transaction Details
        </h2>
        <div class="flex gap-3">
            <a asp-action="EditTransaction" asp-route-id="TRX-001" class="flex items-center gap-1.5 text-sm font-bold px-4 py-2 cursor-pointer rounded-lg bg-[#002B5B] text-gray-100 hover:bg-[#003c7c] transition">
                <i class="fas fa-edit text-xl leading-none"></i> Edit Transaction
            </a>
            <a asp-action="Index" class="flex items-center gap-1.5 text-sm font-bold px-4 py-2 cursor-pointer rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-50 transition">
                <i class="fas fa-arrow-left text-xl leading-none"></i> Back to List
            </a>
        </div>
    </div>

    <!-- Transaction Details -->
    <div class="bg-white rounded-xl shadow-md p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Basic Information -->
            <div class="space-y-4">
                <div>
                    <h3 class="text-lg font-semibold text-gray-700 mb-3">Basic Information</h3>
                    <div class="space-y-3">
                        <div>
                            <label class="block text-sm font-medium text-gray-500">Transaction ID</label>
                            <p class="text-gray-900">TRX-001</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-500">Transaction Type</label>
                            <span class="px-2 py-1 bg-blue-100 text-blue-800 rounded-full text-xs">Payment</span>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-500">Date</label>
                            <p class="text-gray-900">March 20, 2024</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-500">Status</label>
                            <span class="px-2 py-1 bg-green-100 text-green-800 rounded-full text-xs">Active</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Loan Information -->
            <div class="space-y-4">
                <div>
                    <h3 class="text-lg font-semibold text-gray-700 mb-3">Loan Information</h3>
                    <div class="space-y-3">
                        <div>
                            <label class="block text-sm font-medium text-gray-500">Loan ID</label>
                            <p class="text-gray-900">LOAN-001</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-500">Customer</label>
                            <p class="text-gray-900">John Doe</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-500">Item</label>
                            <p class="text-gray-900">Gold Ring</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-500">Amount</label>
                            <p class="text-gray-900">$500.00</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Notes -->
        <div class="mt-6">
            <h3 class="text-lg font-semibold text-gray-700 mb-3">Notes</h3>
            <div class="bg-gray-50 rounded-lg p-4">
                <p class="text-gray-700">Regular monthly payment received. Customer in good standing.</p>
            </div>
        </div>
    </div>
</div> 