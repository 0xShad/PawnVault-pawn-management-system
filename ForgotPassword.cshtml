@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "/Views/Shared/_LayoutForgotPassword.cshtml";
}

<div class="min-h-screen flex flex-col justify-center items-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="w-full max-w-md space-y-8 bg-white p-8 rounded-lg shadow-md">
        <div>
            <h1 class="text-2xl font-bold text-center text-gray-900 mb-2">@ViewData["Title"]</h1>
            <h2 class="text-base text-center text-gray-600 mb-4">Enter your email.</h2>
            <hr class="mb-4" />
        </div>
        <form method="post" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mb-2 text-center" role="alert"></div>
            <div>
                <input asp-for="Input.Email" class="w-full px-3 py-2 border-b border-gray-400 focus:border-black focus:outline-none bg-transparent text-base rounded-none" placeholder="name@example.com" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-red-600 text-xs"></span>
            </div>
            <button type="submit" class="w-full py-3 bg-blue-700 text-white rounded-md font-semibold text-base hover:bg-blue-800 transition">Reset Password</button>
        </form>
    </div>
</div>

